<h2>Sign up</h2>

	<% if CMUSiliconValley::Application::CAN_CREATE_USERS.class == false.class %>
	<p><% %><h2>Sorry, you cannot sign up at this time</h2>
	<% end %>
		
<% if CMUSiliconValley::Application::CAN_CREATE_USERS %>
	<%= form_for(resource_name, resource, :url => registration_path(resource_name)) do |f| %>
	  <p><%= f.label :username %></p>
	  <p><%= f.text_field :username %></p>

	  <p><%= f.label :email %></p>
	  <p><%= f.text_field :email %></p>

	  <p><%= f.label :password %></p>
	  <p><%= f.password_field :password %></p>

	  <p><%= f.label :password_confirmation %></p>
	  <p><%= f.password_field :password_confirmation %></p>
	  <p><%= f.submit "Sign up" %></p>
	<% end %>	
<% end %>

